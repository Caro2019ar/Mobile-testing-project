<?xml version="1.0" encoding="utf-8" ?>
<suite name="Regression Suite Carina Mobile" parallel="methods" thread-count="5">
    <listeners>
        <listener class-name="com.carina.allureReport.AllureListener"/>
    </listeners>
    <test name="Regression n1 Tests for Carina Mobile">
        <groups>
            <define name="regression">
                <run>
                    <include name="initialize"/>
                    <include name="signup"/>
                    <include name="webview"/>
                </run>
            </define>
        </groups>
        <classes>
            <class name="com.carina.tests.InitialPageTest">
            </class>
            <class name="com.carina.tests.SignUpTest">
            </class>
            <class name="com.carina.tests.WebViewTest">
                <parameter name="URL" value="https://github.com/zebrunner/carina"/>
                <methods>
                    <include name="scrollDownWebView"/>
                    <include name="clickOnReadOnGithub"/>
                    <include name="readOnGithub"/>
                </methods>
            </class>

        </classes>
    </test>
</suite>